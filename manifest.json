{
    "manifest_version": 3,
    "name": "OCR with Capture",
    "description": "OCR과 결합한 이미지 영역 캡쳐 도구",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "scripting", "clipboardRead", "clipboardWrite"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["html2canvas.min.js", "content.js"]
        }
    ],
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
  }
}