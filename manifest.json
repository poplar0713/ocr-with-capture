{
    "manifest_version": 3,
    "name": "ocr-with-capture",
    "description": "ocr와 결합한 이미지 영역 캡쳐 도구",
    "version": "0.1",
    "permissions": ["activeTab", "clipboardWrite"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
  }
}